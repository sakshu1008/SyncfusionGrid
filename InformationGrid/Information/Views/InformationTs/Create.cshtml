@model Information.Models.InformationT

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1 style="padding-left:70%;color:darkblue;">Create</h1>
<br />
<div class="row" style="padding-left:70%">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <br /> 
                Male <input type="radio"  ID="RadioButtonList1" name="Gender" value="Male" />
                Female <input type="radio"  ID="RadioButtonList1" name="Gender" value="Female" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <select asp-for="City" ID="DropDownList1" class ="form-control" asp-items="ViewBag.City">
                    <option>--Select City--</option>
                </select>
                <span asp-validation-for="City" class="text-danger"></span>

            </div>
            <br />
            <div class="form-group">
                <input type="submit" id="submit" value="Create" onclick="loadDoc(),getCheckedRadioButton(),validateDropList()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    <script src="~/js/JavaScript.js"></script>
    <script src="~/js/radiobuttonvalidation.js"></script>
    <script src="~/js/DropdownValidation.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
