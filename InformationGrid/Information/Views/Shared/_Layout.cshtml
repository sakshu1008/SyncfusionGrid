@using Syncfusion.EJ2
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Information</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Information.styles.css" asp-append-version="true" />
     <!-- Syncfusion ASP.NET Core controls styles -->
      <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.2.36/fluent.css" />
     <!-- Syncfusion ASP.NET Core controls scripts -->
      <script src="https://cdn.syncfusion.com/ej2/20.2.36/dist/ej2.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid"  style="background-color:lightskyblue">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSxaobvuDD00kpX4_NW1U0z60nuDJr80XTiDA&usqp=CAU"
                    width="200" height="80"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <h1 style="color:darkblue; font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; text-align:center">Velocity Institute</h1>
            </div>
        </nav>
    </header>

    <div class="w3-sidebar" id="sidenav" style="top:120px;display:block">
        <div id="leftmenuinner" >
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
@*                            <a id = "one" href = "#" > Information </a>
*@                            <a class="nav-link text-dark" id = "one" asp-area="" asp-controller="InformationTs" asp-action="Index" >Information</a>
                        </li>
                        <li class="nav-item">
@*                            <a id = "one" href = "#" > Create </a>
*@                            <a class="nav-link text-dark"  id = "two" asp-area="" asp-controller="InformationTs" asp-action="Create">Create</a>
                        </li>
                        <li class="nav-item">
@*                            <a id = "one" href = "#" > Update </a>
*@                            <a class="nav-link text-dark"  id = "three" asp-area="" asp-controller="InformationTs" asp-action="Index">Update</a>
                        </li>
                    </ul>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Velocity Institute - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderBody()
    @RenderSection("Scripts", required: false)
    <!-- Syncfusion ASP.NET Core Script Manager -->
    <ejs-scripts></ejs-scripts> 
</body>
</html>
